<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    android:fillViewport="true"
    tools:context=".ui.MentalStateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado Mental"
            android:textColor="@color/verde"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Orientação espacial:"
            android:textColor="@color/laranja"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempo (0-5):"
                    android:textColor="@color/preto_claro"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNotaLabel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nota"
                    android:textColor="@color/preto_claro"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cardNota1"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardNota1"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:strokeColor="@color/laranja"
                    app:strokeWidth="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/tvTimeScore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        tools:text="5"
                        android:textColor="@color/preto_claro"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <CheckBox
                android:id="@+id/cbTimeMonth"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borda_arredondada_branca"
                app:buttonTint="@color/laranja"
                android:padding="12dp"
                android:text="Mês"
                android:textColor="@color/preto_claro"
                android:layout_marginBottom="8dp"/>
            <CheckBox
                android:id="@+id/cbTimeDay"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borda_arredondada_branca"
                app:buttonTint="@color/laranja"
                android:padding="12dp"
                android:text="Dia"
                android:textColor="@color/preto_claro"
                android:layout_marginBottom="8dp"/>
            <CheckBox
                android:id="@+id/cbTimeYear"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borda_arredondada_branca"
                app:buttonTint="@color/laranja"
                android:padding="12dp"
                android:text="Ano"
                android:textColor="@color/preto_claro"
                android:layout_marginBottom="8dp"/>
            <CheckBox
                android:id="@+id/cbTimeWeekDay"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borda_arredondada_branca"
                app:buttonTint="@color/laranja"
                android:padding="12dp"
                android:text="Dia da semana"
                android:textColor="@color/preto_claro"
                android:layout_marginBottom="8dp"/>
            <CheckBox
                android:id="@+id/cbTimeApproximate"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borda_arredondada_branca"
                app:buttonTint="@color/laranja"
                android:padding="12dp"
                android:text="Que horas são aproximadamente"
                android:textColor="@color/preto_claro"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:text="Local (0-5):"
                    android:textColor="@color/preto_claro"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Nota"
                    android:textColor="@color/preto_claro"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/cardNota2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardNota2"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:strokeColor="@color/laranja"
                    app:strokeWidth="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:id="@+id/tvLocationScore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        tools:text="5"
                        android:textColor="@color/preto_claro"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <CheckBox android:id="@+id/cbLocationState" style="@style/Widget.AppCompat.CompoundButton.RadioButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/borda_arredondada_branca" app:buttonTint="@color/laranja" android:padding="12dp" android:text="Estado" android:textColor="@color/preto_claro" android:layout_marginBottom="8dp"/>
            <CheckBox android:id="@+id/cbLocationCity" style="@style/Widget.AppCompat.CompoundButton.RadioButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/borda_arredondada_branca" app:buttonTint="@color/laranja" android:padding="12dp" android:text="Cidade" android:textColor="@color/preto_claro" android:layout_marginBottom="8dp"/>
            <CheckBox android:id="@+id/cbLocationNeighborhood" style="@style/Widget.AppCompat.CompoundButton.RadioButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/borda_arredondada_branca" app:buttonTint="@color/laranja" android:padding="12dp" android:text="Bairro" android:textColor="@color/preto_claro" android:layout_marginBottom="8dp"/>
            <CheckBox android:id="@+id/cbLocationPlace" style="@style/Widget.AppCompat.CompoundButton.RadioButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/borda_arredondada_branca" app:buttonTint="@color/laranja" android:padding="12dp" android:text="Local" android:textColor="@color/preto_claro" android:layout_marginBottom="8dp"/>
            <CheckBox android:id="@+id/cbLocationCountry" style="@style/Widget.AppCompat.CompoundButton.RadioButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/borda_arredondada_branca" app:buttonTint="@color/laranja" android:padding="12dp" android:text="País" android:textColor="@color/preto_claro"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:text="Repita as palavras (0-3):"
                    android:textColor="@color/preto_claro"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Nota"
                    android:textColor="@color/preto_claro"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/cardNota3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardNota3"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:strokeColor="@color/laranja"
                    app:strokeWidth="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:id="@+id/tvWordsScore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        tools:text="3"
                        android:textColor="@color/preto_claro"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <GridLayout android:columnCount="3" android:layout_width="match_parent" android:layout_height="wrap_content">
                <CheckBox android:id="@+id/cbWordCar" style="@style/Widget.AppCompat.CompoundButton.RadioButton" android:layout_columnWeight="1" android:layout_width="0dp" android:layout_height="wrap_content" app:buttonTint="@color/laranja" android:text="Carro" android:textColor="@color/preto_claro"/>
                <CheckBox android:id="@+id/cbWordVase" style="@style/Widget.AppCompat.CompoundButton.RadioButton" android:layout_columnWeight="1" android:layout_width="0dp" android:layout_height="wrap_content" app:buttonTint="@color/laranja" android:text="Vaso" android:textColor="@color/preto_claro"/>
                <CheckBox android:id="@+id/cbWordBrick" style="@style/Widget.AppCompat.CompoundButton.RadioButton" android:layout_columnWeight="1" android:layout_width="0dp" android:layout_height="wrap_content" app:buttonTint="@color/laranja" android:text="Tijolo" android:textColor="@color/preto_claro"/>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/tvMathLabel"
                    android:text="O senhor faz cálculos? (0-5):"
                    android:textColor="@color/preto_claro"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/tvNotaLabel4"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/tvNotaLabel4"
                    android:text="Nota"
                    android:textColor="@color/preto_claro"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/tilMathScore"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMathScore"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/laranja"
                    android:hint="Nota"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteMathScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:padding="12dp"
                        android:gravity="center_vertical|start"
                        android:textSize="14sp"
                        android:textColor="@color/preto_claro"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RadioGroup
                android:id="@+id/rgMath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/rbMathYes" android:text="Sim" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <RadioButton android:id="@+id/rbMathNo" android:text="Não" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="24dp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/tvMathInstructionYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instrução: “Quanto é 100-7? 93-7? 86-7? 79-7? 72-7? 65?”"
                android:visibility="gone"
                tools:visibility="visible"/>
            <TextView
                android:id="@+id/tvMathInstructionNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instrução: “Soletre a palavra MUNDO de trás pra frente (O D N U M)”"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:paddingBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Voltar"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/cinza_claro"
                android:textColor="@color/preto_claro"
                app:strokeColor="@color/verde"
                app:strokeWidth="1dp"
                android:paddingVertical="12dp"
                app:cornerRadius="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Salvar"
                android:backgroundTint="@color/verde"
                android:paddingVertical="12dp"
                android:textColor="@color/white"
                app:cornerRadius="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>